# Uncomment this line to define a global platform for your project
platform :ios, '15.0'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
  
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
    
    target.build_configurations.each do |config|
      # iOS 15.0 ìµœì†Œ ë²„ì „ ì„¤ì •
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '15.0'
      
      # Bitcode ë¹„í™œì„±í™”
      config.build_settings['ENABLE_BITCODE'] = 'NO'
      
      # Swift ë²„ì „
      config.build_settings['SWIFT_VERSION'] = '5.0'
      
      # âœ… Firebase ëª¨ë“ˆ ë¹Œë“œ ì˜¤ë¥˜ ë°©ì§€
      config.build_settings['BUILD_LIBRARY_FOR_DISTRIBUTION'] = 'YES'
      
      # âœ… M1/M2 ë§¥ ì‹œë®¬ë ˆì´í„° ë¹Œë“œ ì¶©ëŒ ë°©ì§€ 
      #config.build_settings['EXCLUDED_ARCHS[sdk=iphonesimulator*]'] = 'arm64'
    end
  end


  puts "ğŸ”§ Running automatic header patch fixes..."

  # âœ… í—¤ë” ìë™ êµì • ìŠ¤í¬ë¦½íŠ¸ (Pods ì „ì²´)
  puts "ğŸ”§ Fixing all pod headers to use proper syntax..."

  # ëª¨ë“  Pods ë‚´ë¶€ #include / #import ë“¤ì„ <> â†’ "" ë¡œ í†µì¼
  system("find Pods -type f \\( -name '*.h' -o -name '*.m' -o -name '*.mm' -o -name '*.cc' \\) -exec perl -pi -e 's/#include <([^>]+)>/#include \"\\1\"/g' {} +")
  system("find Pods -type f \\( -name '*.h' -o -name '*.m' -o -name '*.mm' -o -name '*.cc' \\) -exec perl -pi -e 's/#import <([^>]+)>/#import \"\\1\"/g' {} +")

  # âœ… LevelDB include path ì™„ì „ êµì •
  leveldb_path = "Pods/leveldb-library"
  if File.directory?(leveldb_path)
    puts "ğŸ§± Fixing LevelDB headers completely..."
    
    # 1ï¸âƒ£ <leveldb-library/...> â†’ "leveldb/..."
    system("find #{leveldb_path} -type f \\( -name '*.h' -o -name '*.cc' \\) -exec perl -pi -e 's/#include <leveldb-library\\/leveldb\\//#include \"leveldb\\//g' {} \\;")
    system("find #{leveldb_path} -type f \\( -name '*.h' -o -name '*.cc' \\) -exec perl -pi -e 's/#include <leveldb-library\\/util\\//#include \"leveldb\\/util\\//g' {} \\;")

    # 2ï¸âƒ£ ë‚¨ì€ <leveldb-library/...> íŒ¨í„´ ì œê±°
    system("find #{leveldb_path} -type f \\( -name '*.h' -o -name '*.cc' \\) -exec perl -pi -e 's/#include <leveldb-library\\//#include \"leveldb\\//g' {} \\;")

    # 3ï¸âƒ£ ëª¨ë“  include ë”°ì˜´í‘œë¡œ í†µì¼
    system("find #{leveldb_path} -type f \\( -name '*.h' -o -name '*.cc' \\) -exec perl -pi -e 's/#include <([^>]+)>/#include \"\\1\"/g' {} \\;")
  else
    puts "âš ï¸ LevelDB path not found â€” skipping"
  end

  puts "âœ… Header fixes complete!"

  
end
